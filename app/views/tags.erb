<div class="container">
  <h1>Posts for Tag:<span id="tag_name"> <%= @tag.name.capitalize %></span></h1>
  <p>Eat shit. J/k. </p>
<h2>Posts:</h2>
    <% @posts.each do |post| %>
      <ul class="each_post">
     <li class= "post_title">TITLE: <%= post.title %> </li>
     <li class= "post_body"> BODY: <%= post.body %> </li>
     <li class= "post_author">AUTHOR: <%= post.author %> </li>
     <li class= "post_tags">TAGS:
       <% post.tags.each do |tag|%>
        <a href="/tag/<%= tag.name %>"><%= tag.name %></a>
       <% end %>
     </li>
     </ul>
    <% end %> 
    
</div>
